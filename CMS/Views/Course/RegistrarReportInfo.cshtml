@model CMS.Models.SemesterYear
@{
    ViewBag.Title = "RegistrarReportInfo";
}

<h2>Registrar Report Information</h2>

@using (Html.BeginForm("RegistrarReportInfo", "Course", FormMethod.Post, new { @Id = "SemesterYearForm" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Year, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Year, new SelectList(ViewBag.Year, "Name", "Name"), htmlAttributes: new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TermName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.TermName, new SelectList(ViewBag.Semester, "Name", "Name"), htmlAttributes: new { @class = "form-control" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>
    </div>
}
