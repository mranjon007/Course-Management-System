@model IEnumerable<CMS.Models.TeacherStatistics>
@{
    ViewBag.Title = "FullTimeFacultyCourseLoad";
}
<div id="FullTime">
    <h2 style="font-size: 16px;">Course Load of Full-Time Faculty</h2>

    <table class="table form-group" id="fullTimeFaculty">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Designation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfCourse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Courses)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Designation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfCourse)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Courses)
                </td>

            </tr>
        }

    </table>
</div>

<div>
    @Html.ActionLink("Download PDF", "FullTimeFacultyCourseLoadReport")
</div>

<div>
    @Html.ActionLink("Download Excel", "FullTimeFacultyCourseLoadReportExcel")
</div>






